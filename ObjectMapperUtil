
package com.poc.restapi;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.ObjectMapper;

/** @author alokdethe
 */
public class ObjectMapperUtil<T> {
    
    private ObjectMapper objectMapper = new ObjectMapper();
    private T t;
    
    public Object getObjectFromStringJson(String j, T td){
        t= (T) td;
        Object o=null;
        
        try{
            o = objectMapper.readValue(j, t.getClass());
        }
        catch(JsonProcessingException ex){
            ex.printStackTrace();
        }
        catch(Exception ex){
            ex.printStackTrace();
        }
        
        return o;
    }
    
}

